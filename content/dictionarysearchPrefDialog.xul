        </row>
        <row>
          <label control="dictionarysearchURL3" value="&dictionarysearch.url;"/>
          <textbox id="dictionarysearchURL3" size="50" tabindex="5"/>
        </row>
      </rows>
    </grid>

    <description><html:b>&dictionarysearch.dictionary; 4</html:b></description>
    <grid flex="1">
