<?xml-stylesheet href="chrome://global/skin/" type="text/css"?>

<!DOCTYPE window SYSTEM "chrome://dictionarysearch/locale/dictionarysearch.dtd" >


<dialog id="dictionary_search_settings_dialog"
        title="&dictionarysearch.title;"
        buttons="accept,cancel, help"
        onload="org.mozdev.dictionarysearch.loadSettings()"
        minwidth="450"
        ondialoghelp="window.openDialog('chrome://dictionarysearch/content/dictionarysearchHelpDialog.xul');"
        ondialogaccept="org.mozdev.dictionarysearch.saveSettings()"
        xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
        xmlns:html="http://www.w3.org/1999/xhtml">

<script src="dictionarysearchOverlay.js"/>

<stringbundle id="dictionarysearch_string_bundle" src="chrome://dictionarysearch/locale/dictionarysearch.properties"/>


<groupbox orient="Vertical" width="100%">
  <caption label="&dictionarysearch.settings;"/>


    <description><html:b>&dictionarysearch.dictionary; 1</html:b></description>
    <grid flex="1">
      <columns>
        <column flex="0"/>
        <column flex="1"/>
      </columns>
      <rows>
        <row>
          <label control="dictionarysearchMenuText1" value="&dictionarysearch.menutext;"/>
          <textbox id="dictionarysearchMenuText1" size="50" tabindex="0" flex="1"/>
        </row>
        <row>
          <label control="dictionarysearchURL1" value="&dictionarysearch.url;"/>
          <textbox id="dictionarysearchURL1" size="50" tabindex="1"/>
        </row>
      </rows>
    </grid>

    <description><html:b>&dictionarysearch.dictionary; 2</html:b></description>
    <grid flex="1">
      <columns>
